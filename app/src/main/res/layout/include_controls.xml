<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BF000000"
    android:clickable="true">

    <SeekBar
        android:id="@+id/seeker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_inset_less"
        android:layout_marginRight="@dimen/content_inset_less" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seeker"
        android:layout_marginLeft="@dimen/content_inset"
        android:layout_marginStart="@dimen/content_inset"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:textSize="@dimen/size_small"
        tools:ignore="UnusedAttribute"
        tools:text="00:00" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seeker"
        android:layout_marginEnd="@dimen/content_inset"
        android:layout_marginRight="@dimen/content_inset"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:textSize="@dimen/size_small"
        tools:ignore="UnusedAttribute"
        tools:text="-05:00" />

    <ImageButton
        android:id="@+id/btnRestart"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_below="@+id/position"
        android:layout_marginLeft="@dimen/content_inset_icon_button"
        android:layout_marginStart="@dimen/content_inset_icon_button"
        android:background="?selectableItemBackground"
        android:paddingLeft="@dimen/button_size"
        android:paddingRight="@dimen/button_size"
        app:srcCompat="@drawable/action_restart"
        tools:ignore="ContentDescription,VectorDrawableCompat" />

    <TextView
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/position"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:minHeight="@dimen/button_size"
        android:paddingLeft="@dimen/content_inset"
        android:paddingRight="@dimen/content_inset"
        android:text="@string/evp_retry"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/size_medium"
        tools:ignore="ContentDescription,UnusedAttribute" />

    <ImageButton
        android:id="@+id/btnPlayPause"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_below="@+id/position"
        android:layout_centerHorizontal="true"
        android:background="?selectableItemBackground"
        app:srcCompat="@drawable/action_play"
        tools:ignore="ContentDescription,VectorDrawableCompat" />

    <TextView
        android:id="@+id/labelBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlayPause"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:textSize="@dimen/size_small"
        tools:ignore="UnusedAttribute"
        tools:text="-09:12" />

    <TextView
        android:id="@+id/btnSubmit"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/position"
        android:background="?selectableItemBackground"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:minHeight="@dimen/button_size"
        android:paddingLeft="@dimen/content_inset"
        android:paddingRight="@dimen/content_inset"
        android:text="@string/evp_submit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/size_medium"
        tools:ignore="ContentDescription,UnusedAttribute" />

    <TextView
        android:id="@+id/labelCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/position"
        android:layout_marginEnd="@dimen/content_inset"
        android:layout_marginRight="@dimen/content_inset"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:minHeight="@dimen/button_size"
        android:textColor="#fff"
        android:textSize="@dimen/size_medium"
        tools:ignore="UnusedAttribute"
        tools:text="-00:30" />

</RelativeLayout>